    "tasks": [
        {
            "label": "watch server",
            "command": "dotnet watch run",
            "options": {
                "cwd": "./FoodStuffs.Web"
            },
            "type": "shell",
            "group": "test",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch server tests",
